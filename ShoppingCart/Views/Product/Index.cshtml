@model IEnumerable<Domain.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.NameAr)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImgPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameEn)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.NameAr)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ProductImgPath)*@
                <img src="~/ProductImages/@item.ProductImgPath" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.NameEn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>

            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>

            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

            </td>

            @*<a class="btn btn-danger" onclick="ConfirmDelete(@item.Id)">Delete <i class="glyphicon-trash"></i>  </a>*@
     
        </tr>
        }
    </tbody>
</table>


